<!DOCTYPE html>
<html lang="en">
  <%-include('./components/head.ejs') %>
  <body>
    <%-include('./components/header.ejs') %>

    <div class="body">
      <%-include('./components/sidebar.ejs') %>
      <div id="content-wrapper" class="justify-content-ct">
        <div id="content" class="flex-box">
          <form id="form" action="">
            <div>
              <div>서비스 번호:</div>
              <input id="serviceId" type="text" name="serviceId" readonly />
            </div>
            <div>
              <div>서비스 상태:</div>
              <input
                id="serviceStatus"
                type="text"
                name="serviceStatus"
                readonly
              />
            </div>
            <div>
              <div>사장님 닉네임:</div>
              <input
                id="bossNickname"
                type="text"
                name="bossNickname"
                readonly
              />
            </div>
            <div>
              <div>사진:</div>
              <img id="laundryImage" src="" alt="" />
            </div>
            <div>
              <div>요구사항:</div>
              <Textarea
                id="laundryRequest"
                name="requests"
                rows="6"
                cols="40"
                readonly
              ></Textarea>
            </div>
            <div>
              <div>닉네임:</div>
              <input id="nickname" type="text" name="nickname" readonly />
            </div>
            <div>
              <div>전화번호:</div>
              <input id="phoneNumber" type="text" name="phoneNumber" readonly />
            </div>
            <div>
              <div>주소:</div>
              <input id="address" type="text" name="address" readonly />
            </div>

            <div class="justify-content-sb mt-2">
              <button class="history-back">👈 돌아가기</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <%-include('./components/footer.ejs') %>

    <script src="/js/main.js"></script>
    <script>
      // 즉시 실행 함수에 async를 줘서 구현 => getUserInfo 함수에서 비동기 요청을함
      (async () => {
        submit_btn = document.querySelector("button[type='submit']");
        back_btn = document.querySelector(".history-back");

        back_btn.addEventListener("click", (e) => {
          e.preventDefault();
          window.history.back();
        });

        const userInfo = await getUserInfo();
        console.log({ userInfo });
        const isLogin = !!userInfo;
        console.log({ isLogin });

        createHeaderButton(isLogin);
        setPageInfo(userInfo);

        // 해당 서비스 데이터 요청을 보낸다
        const _serviceId = parseInt(
          window.location.pathname.replace("/services/", ""),
          10
        );

        const data = await getService(_serviceId);
        console.log({ data });

        const serviceId = document.querySelector("#serviceId");
        const serviceStatus = document.querySelector("#serviceStatus");
        const bossNickname = document.querySelector("#bossNickname");
        const laundryImage = document.querySelector("#laundryImage");
        const laundryRequest = document.querySelector("#laundryRequest");
        const nickname = document.querySelector("#nickname");
        const phoneNumber = document.querySelector("#phoneNumber");
        const address = document.querySelector("#address");

        serviceId.value = data.id;
        serviceStatus.value = getStatus(data.status);
        bossNickname.value = data.bossId;
        laundryImage.src = data.laundryImage;
        laundryRequest.value = data.laundryRequest;
        nickname.value = data.nickname;
        phoneNumber.value = data.phoneNumber;
        address.value = data.address;
      })();
    </script>
  </body>
</html>
